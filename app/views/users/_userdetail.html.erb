<%= simple_form_for @user, url: user_path , html: { class: "form-container-50 center-auto"} do |f| %>
  <div class="flex space-between">
    <div class="flex-column w-48">
      <p><strong>First Name:</strong></p>
      <%= f.input :first_name, label: false, input_html: { class: "form-input-100" } %>
    </div>
    <div class="flex-column w-48">
      <p><strong>Last Name:</strong></p>
      <%= f.input :last_name, label: false, input_html: { class: "form-input-100" } %>
    </div>
  </div>
  <div class="flex space-between">
    <div class="flex-column w-48">
      <p><strong>Company:</strong></p>
      <%= f.input :company_name, label: false, input_html: { class: "form-input-100" } %>
    </div>
    <div class="flex-column w-48">
      <p><strong>Industry:</strong></p>
      <%= f.input :industry, collection: User::INDUSTRY, label: false, input_html: { class: "form-input-100" } %>
    </div>
  </div>
    <div>
      <p><strong>Email:</strong></p>
      <%= f.input :email, disabled: true,label: false, input_html: { class: "form-input-100" } %>
    </div>
    <div>
      <p><strong>Meeting link:</strong></p>
      <%= f.input :meeting_link, label: false, input_html: { class: "form-input-100" } %>
    </div>
    <%= f.submit 'Save/Update', class:"btn btn-primary w-100", id: "savebutton"%>
<% end %>
