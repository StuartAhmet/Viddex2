
<div class="contactus1_tab">

  <div class="contact_details_container">

    <div class="contact_details_contents">

      <div class="contactustext">

        <div class="contactheading">
          Contact Us
        </div>

        <div class="contactpara">
          Get in touch with our team to learn more about Viddex
        </div>

      </div>

      <%= form_tag("/contact", method: "post", class: "contactform") do %>

        <div class="contactnamesdiv">
          <div class="form-group">
            <%= label_tag :first_name, "FIRST NAME: *", class:"contactlabel" %>
            <%= text_field_tag :first_name, nil, class: "form-control contactfill_in contactnames", placeholder: "First Name" %>
          </div>

          <div class="form-group">
            <%= label_tag :last_name, "LAST NAME: *", class:"contactlabel" %>
            <%= text_field_tag :last_name, nil, class: "form-control contactfill_in contactnames", placeholder: "Last Name" %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag :email, "EMAIL: *", class:"contactlabel" %>
          <%= email_field_tag :email, nil, class: "form-control contactfill_in contactnot_names", placeholder: "Email" %>
        </div>
        <div class="form-group">
          <%= label_tag :notes, "NOTES: *", class:"contactlabel" %>
          <%= text_area_tag :notes, nil, class: "form-control contactfill_in contactnot_names", placeholder: "Notes" %>
        </div>
        <div class="form-group">
          <%= label_tag :country, "COUNTRY: *", class:"contactlabel contactnot_names" %>
