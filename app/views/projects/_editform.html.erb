      <div class="container pt-4 col-4">
        <%= simple_form_for [@user, @project] do |f| %>
          <div class="flex">
            <%= f.input :prospect_first %>
            <%= f.input :prospect_last  %>
          </div>

          <div class="flex">
            <%= f.input :prospect_company %>
            <%= f.input :prospect_email %>
          </div>
          <div class="flex-column">
            <%= f.input :message,input_html: { class: "message_styling" } %>
            <%= f.input :message_body, label: false %>
          </div>
          <div class="accordion" id="accordionPanelsStayOpenExample">
            <div class="accordion-item">
              <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                  Advanced options
                </button>
              </h2>
              <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
                <div class="accordion-body">
                  <div class="flex"style="justify-content:space-between">
                    <%= f.input :font, collection: Project::FONT  %>
                    <%= f.input :opacity, label: "Font opacity" %>
                    <%= f.input :font_size %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="flex">
            <%= f.submit 'Save and preview', class: 'btn btn-outline-dark', style:"border-radius:5px"%>
          <% end %>
            <%= link_to user_projects_path(@user, @projects) do %>
              <button style="border-radius:5px"class="btn btn-outline-dark"  data-bs-toggle="pill" data-bs-target="#pills-video" type="button" role="tab" aria-controls="pills-video" aria-selected="true">
                <i class="fa-solid fa-chevron-left"></i>Back
                </button>
            <% end %>
          </div>
      </div>
