            <div class="dropdown">
              <button data-bs-toggle="dropdown" style="background-color:transparent; border:none;" >
                <img class="g-logo" src="<%= @user.avatar_url %>" alt="unable to locate image">
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item"> <%= @user.first_name || @user.full_name %> <br>
                      <%= @user.email %></a></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= link_to destroy_user_session_path, data: {turbo_method: :false} do %>
                  <span>
                    <p class="dropdown-item">Logout</p>
                  </span>
                <% end %></li>
              </ul>
            </div>
        <% else %>
          <%= link_to destroy_user_session_path, data: {turbo_method: :false} do %>
            <span class="nav-link">
              <p style="color:white; font-size:18px; font-weight: normal">Logout</p>
            </span>
          <% end %>
        <% end %>
      </div>
    </li>
