<script>

  var element1 = document.getElementById('droplist_one');
  var element2 = document.getElementById('droplist_two');

  function addDropShadow() {
    var header = document.getElementById('navshadow');
    header.style.boxShadow = '0 4px 20px rgb(15 31 41 / 16%)';
    header.style.backgroundColor ='white';
    header.style.transition = 'background-color 0.3s ease'; // Adjust the duration as needed

  }

  function removeDropShadow() {
    var header = document.getElementById('navshadow');
    header.style.boxShadow = '0 0 0 rgba(0, 0, 0, 0)';
    header.style.transition = 'box-shadow 0.5s ease-out';
    header.style.backgroundColor ='transparent';
    header.style.transition = 'background-color 0.3s ease'; // Adjust the duration as needed


  }

  window.addEventListener('scroll', function() {
    if (window.scrollY > 0) {
      addDropShadow();
    } else {
      removeDropShadow();
    }
  });

</script>
