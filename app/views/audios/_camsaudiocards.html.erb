 <div class="flex flex-wrap content-start  " style="justify-content:flex-start">
  <% audio_number = 0 %>
  <% @user.audios.order(title: :asc).each do |audio| %>
    <div class="audio-card flex space-between" style="margin-bottom:20px;margin-right:20px">
      <!-- Button trigger modal -->
      <button type="button" class="audio-card flex space-between" data-bs-toggle="modal" data-bs-target="#audioModal<%= audio_number %>">
        <p><%= audio.title.capitalize %></p>
      </button>
      <!-- Modal -->
      <div class="modal fade" id="audioModal<%= audio_number %>" tabindex="-1" aria-labelledby="audioModal<%= audio_number %>Label" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="audioModal<%= audio_number %>Label"><%= audio.title.capitalize %></h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <%= audio.created_at.strftime('%d/%m/%y')%>
              <% audio_source = cloudinary_url(audio.file.key+".mp3", :resource_type=>"video") %>
              <audio controls>
                <source src=<%=audio_source %>  type="audio/aac">
                <source src=<%=audio_source %>  type="audio/ogg">
                <source src=<%=audio_source %>  type="audio/mpeg">
                <source src=<%=audio_source %>  type="audio/wav">
                Your browser does not support the audio element.
              </audio>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      <div class="dropdown">
        <button class="bi bi-three-dots-vertical mr10" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false"
                style="background-color:transparent;border-color:transparent;padding:10px">
        </button>
        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
          <li><a data-turbo-method="delete" class="dropdown-item bi bi-trash"data-turbo-confirm="Are you sure?" href="/terminal/<%= @user.public_uid %>/audio-files/<%= audio.public_uid%>"> Delete</a></li>
        </ul>
      </div>

      <%# <%= cl_image_tag(audio.file.key+".png", resource_type: "video",
        :transformation=>[
          {height: 20,width: 50,crop: "scale"},
          {flags: "waveform"}
        ]) %>
    </div>
  <% audio_number += 1 %>
  <% end %>
</div>
