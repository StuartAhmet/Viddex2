<div class="devise-wrap gradient-blue">
  <div class="devise-logo">
    <%= image_tag "https://res.cloudinary.com/dth8lnhas/image/upload/v1670928248/Screenshot_2022-12-13_at_10.42.32-removebg-preview_o8tytd.png",:style => "width:130px"%>
  </div>
    <h4>Start using Viddex for free today</h4>
    <div class="devise-box">
      <div class="login-panel">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
          <%= f.error_notification %>
                <div class="form-inputs">
                  <%= f.input :first_name,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "first name" }%>
                  <%= f.input :last_name,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "last name" }%>
                  <%= f.input :company_name,
                              autofocus: true,
                              input_html: { autocomplete: "company name" }%>
                  <%= f.input :industry, collection: User::INDUSTRY,
                              required: true %>
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "email" }%>
                  <%= f.input :password,
                              required: true,
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              input_html: { autocomplete: "new-password" } %>
                  <%= f.input :password_confirmation,
                              required: true,
                              input_html: { autocomplete: "new-password" } %>
                </div>

              <div class="form-actions" >
                <%= f.button :submit, "Create an account", class: "nav-link lb-btn", style: "width:100%;border:none" %>
              </div>
      <% end %>
             <%= button_to  'Login with Google', user_google_oauth2_omniauth_authorize_path, method: :post, :data => {turbo: "false"} %>



      </div>
            <div class="footer-panel">
              Already have an account? <%= render "devise/shared/links" %>
            </div>
  </div>
      <div class="devise-logo">
        Â© <%= Date.today.year %> Viddex Limited
      </div>
</div>
