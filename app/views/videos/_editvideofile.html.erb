<% if @video.text_distortion == true
      distortion_params =  @video.distort_nw_x.to_s+":"+@video.distort_nw_y.to_s+":"+
                          @video.distort_ne_x.to_s+":"+@video.distort_ne_y.to_s+":"+
                          @video.distort_se_x.to_s+":"+@video.distort_se_y.to_s+":"+
                          @video.distort_sw_x.to_s+":"+@video.distort_sw_y.to_s
    else
      distortion_params = nil
    end %>

<%= cl_image_tag("#{@video.file.key}.jpg", resource_type: "video",  :transformation=>[
      {crop: "scale"},
      {angle: @video.rotation},
      {angle: @video.angle,
      border: "6px_solid_rgb:000",
      distort: distortion_params,
      :gravity=>"north_west",
      :height=>@video.text_box_height,
      # message params
      :overlay=>{
        :font_family=>"Neucha", :font_size=>28,
        text: "V I D D E X "*20 },
        :opacity=>100, :width=>@video.text_width,
        :x=>@video.x_axis, :y=>@video.y_axis, :crop=>"fit"}
        ])
%>
