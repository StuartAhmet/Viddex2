
<% unprocessed = @user.videos.where(bgrem_require: "true", bgrem_complete: "false").count %>

<% if unprocessed > 0 %>
  <div class="alert alert-danger alert-dismissible fade show flex space-between" role="alert">
    <div class="spinner-border text-danger" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
    <div class="ml10">
      <strong><%= unprocessed %> of your video/s </strong> currently being processed!
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>
